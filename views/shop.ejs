<script src="https://cdn.tailwindcss.com"></script>
<%- include('./partials/header') %> <% if(success.length>0){ %>
<div
  class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500"
>
  <span class="inline-block mt-1 mb-1 text-white"> <%= success %> </span>
</div>
<% } %>

<link
  href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css"
  rel="stylesheet"
/>

<div class="w-full min-h-screen flex items-start px-6 py-6 bg-gray-50">
  <!-- Sidebar -->
  <div
    class="w-[25%] flex flex-col items-start space-y-10 bg-white p-6 rounded-lg shadow-lg"
  >
    <!-- Sort Section -->
    <div class="w-full">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Sort by</h3>
      <form action="/shop">
        <select
          class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          name="sortby"
        >
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <!-- Categories Section -->
    <div>
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Categories</h3>
      <div class="flex flex-col space-y-2">
        <a class="text-blue-600 hover:text-blue-800 text-sm" href=""
          >New Collection</a
        >
        <a class="text-blue-600 hover:text-blue-800 text-sm" href=""
          >All Products</a
        >
        <a class="text-blue-600 hover:text-blue-800 text-sm" href=""
          >Discounted Products</a
        >
      </div>
    </div>

    <!-- Filters Section -->
    <div>
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Filter by</h3>
      <div class="flex flex-col space-y-2">
        <a class="text-blue-600 hover:text-blue-800 text-sm" href=""
          >Availability</a
        >
        <a class="text-blue-600 hover:text-blue-800 text-sm" href=""
          >Discount</a
        >
      </div>
    </div>
  </div>

  <!-- Products Section -->
  <div class="w-[75%] flex flex-wrap gap-6">
    <% product.forEach(function(product) { %>
    <div class="w-60 bg-white rounded-lg shadow-lg overflow-hidden">
      <!-- Product Image -->
      <div class="w-full h-52 bg-gray-200 flex items-center justify-center">
        <img
          class="h-[10rem] object-cover"
          src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
          alt="<%= product.title %>"
        />
      </div>

      <!-- Product Details -->
      <div class="p-4">
        <h3 class="text-md font-semibold text-gray-800 truncate">
          <%= product.title %>
        </h3>
        <h4 class="text-lg font-bold text-green-600 mt-2">
          â‚¹ <%= product.price %>
        </h4>
        <h5 class="text-sm text-gray-600 mt-1">Genre: <%= product.genre %></h5>
        <h6 class="text-sm text-gray-500 mt-1">
          Published: <%= product.publicationdate %>
        </h6>
      </div>

      <!-- Add to Cart Button -->
      <div class="p-4">
        <a
          class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-500 text-white hover:bg-blue-600 shadow-md"
          href="/addtocart/<%= product._id %>"
        >
          <i class="ri-add-line text-lg"></i>
        </a>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include('./partials/footer') %>
